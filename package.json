{
  "name": "@uxland/components",
  "description": "UXLand Libraries",
  "author": "UXLand <dev@uxland.es>",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uxland/components.git"
  },
  "bugs": {
    "url": "https://github.com/uxland/components/issues"
  },
  "homepage": "https://github.com/uxland/components#readme",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/addon-actions": "^6.1.14",
    "@storybook/addon-controls": "^6.1.14",
    "@storybook/addon-docs": "^6.1.14",
    "@storybook/addon-knobs": "^6.1.14",
    "@storybook/addon-links": "^6.1.14",
    "@storybook/addon-storysource": "^6.1.14",
    "@storybook/addon-viewport": "^6.1.14",
    "@storybook/web-components": "^6.1.14",
    "@uxland/project-tools": "^1.0.0-alpha.8",
    "babel-loader": "^8.1.0",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.1",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "node-sass": "^5.0.0",
    "node-sass-import": "^2.0.1",
    "node-watch": "^0.7.1",
    "rimraf": "^3.0.2",
    "sass-loader": "^10.0.2",
    "ts-loader": "^8.0.14",
    "web-component-analyzer": "^1.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged -c node_modules/@uxland/project-tools/lint/lint-staged.config.js",
      "commit-msg": "commitlint --config node_modules/@uxland/project-tools/lint/commitlint.config.js -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {},
  "scripts": {
    "clean:build": "rimraf packages/*/es && rimraf packages/*/lib && rimraf packages/*/dist",
    "clean:styles": "rimraf packages/*/*-css.ts",
    "clean": "yarn clean:styles && yarn clean:build",
    "analyze-wc": "wca analyze \"packages/*/src/**/*.ts\" --outFile .storybook/custom-elements.json",
    "storybook": "yarn clean && yarn watch & start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build:dev": "yarn build:styling",
    "build:styling": "./scripts/build-styling.sh",
    "build": "yarn build:styling && lerna run build --stream",
    "readme:coverage": "lerna run readme:coverage --stream",
    "release": "yarn build && yarn test && yarn readme:coverage",
    "test": "lerna run test --parallel",
    "watch": "yarn build:dev && node scripts/watcher.js"
  }
}
