{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "strict": false,
    "esModuleInterop": true,
    "sourceMap": true,

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",

    "declaration": true,
    "outDir": "wc"
  },

  "include": ["packages"],

  "exclude": ["node_modules", "web_modules"],

  "plugins": [
    {
      "name": "typescript-lit-html-plugin"
    }
  ]
}
